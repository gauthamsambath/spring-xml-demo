<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">



    <bean id="actorObject1" class="com.stackroute.domain.Actor">
        <constructor-arg value="Lalettan" ></constructor-arg>
        <constructor-arg value="Male"></constructor-arg>
        <constructor-arg value="55" type="int"></constructor-arg>
    </bean>
    <bean id="actorObject2" class="com.stackroute.domain.Actor">
        <constructor-arg value="Mamooty" ></constructor-arg>
        <constructor-arg value="Male"></constructor-arg>
        <constructor-arg value="65" type="int"></constructor-arg>
    </bean>
    <bean id="actorObject3" class="com.stackroute.domain.Actor">
        <constructor-arg value="Unni mukundan" ></constructor-arg>
        <constructor-arg value="Male"></constructor-arg>
        <constructor-arg value="32" type="int"></constructor-arg>
    </bean>
    <bean name="movie" class="com.stackroute.domain.Movie" scope = "singleton">
        <constructor-arg>
            <ref bean="actorObject1"></ref>
        </constructor-arg>
    </bean>
    <bean name="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg>
            <ref bean="actorObject2"></ref>
        </constructor-arg>
    </bean>
    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg>
            <ref bean="actorObject3"></ref>
        </constructor-arg>
    </bean>


</beans>